    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.cookie.js"></script>

    <script>
        function submitInfo() {
            return false;
        }

        $(function () {
            $('#log').click(function () {
                window.location.href = "/home/index";
            });

            $('form').submit(function () {
                //1.check for passwords
                var pwd1 = $('#password').val();
                var pwd2 = $('#password_confirm').val();
                if (pwd1 != pwd2)
                    alert("两次输入的密码不一致！");
                //2.submit
                else {
                    var username = $('#username').val();
                    var pwd = pwd1;
                    var firstname = $('#first_name').val();
                    var lastname = $('#last_name').val();
                    var email = $('#email').val();
                    var gender = $('input:radio:checked').next('span').text();//$("input[type='radio']:checked").val(); $("input[name='rd']:checked").val();
                    var data = {
                        firstname: firstname,
                        lastname: lastname,
                        username: username,
                        password: pwd,
                        email: email,
                        gender: gender
                    };
                    $.ajax({
                        type: 'post',
                        url: '/home/creatnewuser',
                        data: data,
                        success: function (data) {
                            alert(data);
                        },
                        error: function () {
                            alert("error");
                        }
                    });
                }
            });
        });
    </script>
